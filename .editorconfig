# EditorConfig is awesome: https://EditorConfig.org

root = true

# Baseline
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.cpp,*.hpp,*.h,*.c]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
